<nav class="navbar navbar-default nav-category" role="navigation">
  <div class="containe-fluid">
    <ul class="nav navbar-nav">
      <% Category.all.roots.each do |category| %>
        <% if @category.root == category %>
          <li class="active"><%= link_to category.name, category %></li>
          <% @category.children.each do |child| %>
            <li class="sub-category"><%= link_to child.name, child %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
</nav>

<div class="mb-30">
  <ol class="breadcrumb title">
    <% @category.ancestors. each do |category| %>
      <li>
        <%= link_to_unless_current category.name, category %>
      </li>
    <% end %>
    <li>
      <strong><%= @category.name %></strong>
    </li>
  </ol>
</div>
<div class="clearfix"></div>
<div class="container_fullwidth">
  <div class="container">
    <div class="hot-products">
      <ul id="hot">
        <li>
          <div class="row">
            <%= render "shared/product" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
